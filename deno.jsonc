{
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-read --allow-run --allow-write ./src/**/*.test.ts -- --debug",
    "dev": "./denon dev",
    "compile": "deno task compile-linux-x64 && deno task compile-macos-x64 && deno task compile-macos-arm",
    "compile-linux-x64": "deno compile --allow-read --allow-run --allow-write ./src/entry.ts --output dist/linux_x64/uniffo --target x86_64-unknown-linux-gnu",
    "compile-macos-x64": "deno compile --allow-read --allow-run --allow-write ./src/entry.ts --output dist/macos-x64/uniffo --target x86_64-apple-darwin",
    "compile-macos-arm": "deno compile --allow-read --allow-run --allow-write ./src/entry.ts --output dist/macos-arm/uniffo --target aarch64-apple-darwin"
  },
  "lint": {
    "include": ["src/"],
    "exclude": [],
    "report": "pretty",
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": []
  }
}
