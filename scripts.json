{
  "$schema": "https://deno.land/x/denon@2.5.0/schema.json",
  "scripts": {
    "dev": {
      "desc": "if sth with extension .ts will change in ./src directory then 'deno task test'",
      "cmd": "deno task test",
      "watch": true
    }
  },
  "watcher": {
    "interval": 50,
    "match": ["./src/**"],
    "exts": ["ts"]
  }
}